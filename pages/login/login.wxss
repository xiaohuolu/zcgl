/* pages/home/home.wxss */
.container{
  margin-top:200rpx;
}
.home-box{
  display: flex;
  justify-content: center;
  align-items: center;
}
.home-box image{
  width:60rpx;
}
.home-box text{
  color:#1eabf1;
  font-size:50rpx;
  font-weight: bold;
  margin-left:10rpx;
}
.input-group{
  margin-top:80rpx;
  width:100%;
  flex-wrap: wrap;
  justify-content: center;
}
.input-item{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top:40rpx;
  width:55%;
}
.input-item input{
  padding:10rpx 0;
  border:0;
}
.input-item image{
  width:40rpx;
  margin-right:20rpx;
}

.code-btn{
  position: absolute;
  left:360rpx;
  padding:10rpx 20rpx;
  /* background:#cf4d52; */
  /* color:#fff; */
  width: 190rpx !important;
  border-radius: 20rpx;
  font-size: 24rpx !important;
  border:0 !important;
}